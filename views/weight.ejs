<%- include("partials/head", { title: "Daily Weight" }) %>
<%- include("partials/header") %>

<!-- Back Button -->
<div class="mb-6">
    <a href="/" class="inline-flex items-center gap-2 text-gray-400 hover:text-white smooth-transition">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Back to Dashboard
    </a>
</div>

<!-- Page Header -->
<div class="mb-6">
    <h2 class="text-2xl md:text-3xl font-bold mb-2 flex items-center gap-2">
        <svg class="w-8 h-8 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3"></path>
        </svg>
        Track Your Weight
    </h2>
    <p class="text-gray-400">Log your daily weight to monitor progress</p>
</div>

<!-- Weight Form Card -->
<div class="bg-gradient-to-br from-gray-800/90 to-gray-800/50 backdrop-blur-lg rounded-2xl shadow-2xl border border-gray-700 p-6 max-w-md mx-auto">
    <form action="/weight" method="POST" class="space-y-5">

        <div>
            <label class="block text-sm font-medium mb-3 text-gray-300 flex items-center gap-2">
                <svg class="w-5 h-5 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                Date
            </label>
            <input type="date" name="date"
                   class="w-full p-4 rounded-xl bg-gray-900/50 border border-gray-600 text-white focus:border-purple-500 focus:ring-2 focus:ring-purple-500/20 smooth-transition text-lg"
                   value="<%= new Date().toISOString().split('T')[0] %>" required>
        </div>

        <div>
            <label class="block text-sm font-medium mb-3 text-gray-300 flex items-center gap-2">
                <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3"></path>
                </svg>
                Weight (kg)
            </label>
            <div class="relative">
                <input type="number" step="0.1" name="weight"
                       class="w-full p-4 rounded-xl bg-gray-900/50 border border-gray-600 text-white focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 smooth-transition text-lg pr-12"
                       placeholder="70.5" required>
                <span class="absolute right-4 top-1/2 -translate-y-1/2 text-gray-400 font-medium">kg</span>
            </div>
        </div>

        <button type="submit"
                class="w-full bg-gradient-to-r from-blue-500 to-purple-600 py-4 rounded-xl font-semibold text-lg shadow-lg smooth-transition hover:shadow-xl hover:scale-105 flex items-center justify-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            Save Weight
        </button>
    </form>
</div>

<!-- Tips Section -->
<div class="mt-8 max-w-md mx-auto">
    <div class="bg-gray-800/50 backdrop-blur-lg rounded-xl border border-gray-700 p-4">
        <h3 class="font-semibold mb-3 flex items-center gap-2 text-blue-400">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Tips for Accurate Tracking
        </h3>
        <ul class="space-y-2 text-sm text-gray-300">
            <li class="flex items-start gap-2">
                <svg class="w-4 h-4 mt-0.5 text-green-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                Weigh yourself at the same time each day
            </li>
            <li class="flex items-start gap-2">
                <svg class="w-4 h-4 mt-0.5 text-green-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                Best to weigh in the morning before eating
            </li>
            <li class="flex items-start gap-2">
                <svg class="w-4 h-4 mt-0.5 text-green-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                Track weekly trends, not daily fluctuations
            </li>
        </ul>
    </div>
</div>

<%- include("partials/footer") %>
