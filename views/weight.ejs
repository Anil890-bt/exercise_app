<%- include("partials/head", { title: "Daily Weight" }) %>
<%- include("partials/header") %>

<h2 class="text-xl font-bold mb-4">Add Daily Weight</h2>

<form action="/weight" method="POST" class="space-y-3">

    <label>Date:</label>
    <input type="date" name="date" class="w-full p-2 rounded text-black" required>

    <label>Weight (kg):</label>
    <input type="number" step="0.1" name="weight" class="w-full p-2 rounded text-black" required>

    <button class="w-full bg-blue-600 py-2 rounded">Save</button>
</form>

<%- include("partials/footer") %>
